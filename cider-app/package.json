{
  "name": "cider",
  "description": "Design game cards using HTML/Handlebars, CSS, and tabular data.",
  "author": {
    "name": "Hristo Iankov",
    "email": "contact@oatear.com",
    "url": "https://oatear.com"
  },
  "version": "0.6.10",
  "repository": "https://github.com/oatear/cider",
  "main": "electron-app/dist/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:gh-pages": "ng build --base-href=/cider/",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "ng build --base-href ./ --configuration development && tsc --p electron-app && electron .",
    "electron:debug": "ng build --base-href ./ --configuration development && tsc --p electron-app && electron . --inspect-brk",
    "electron:compile": "ng build --base-href ./ && tsc --p electron-app",
    "electron:build": "ng build --base-href ./ && tsc --p electron-app && electron-builder build --publish=never",
    "electron:build-mas": "ng build --base-href ./ && tsc --p electron-app && electron-builder --mac mas",
    "electron:build-mas-dev": "ng build --base-href ./ && tsc --p electron-app && electron-builder --mac mas-dev",
    "electron:build-dmg": "ng build --base-href ./ && tsc --p electron-app && electron-builder --mac dmg"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.8",
    "@angular/cdk": "^21.0.6",
    "@angular/common": "^21.0.8",
    "@angular/compiler": "^21.0.8",
    "@angular/core": "^21.0.8",
    "@angular/forms": "^21.0.8",
    "@angular/platform-browser": "^21.0.8",
    "@angular/platform-browser-dynamic": "^21.0.8",
    "@angular/router": "^21.0.8",
    "@electron/notarize": "^2.5.0",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^8.0.0",
    "@primeng/themes": "^18.0.2",
    "@types/dom-to-image": "^2.6.7",
    "@types/opentype.js": "^1.3.8",
    "@types/uuid": "^9.0.8",
    "chokidar": "^4.0.3",
    "cytoscape": "^3.33.1",
    "dexie": "^3.2.7",
    "dexie-export-import": "^4.1.4",
    "dom-to-image-more": "^3.7.2",
    "electron-builder-notarize": "^1.5.2",
    "file-saver": "^2.0.5",
    "handlebars": "^4.7.8",
    "html-to-image": "^1.11.13",
    "jszip": "^3.10.1",
    "marked": "^17.0.1",
    "mime": "^3.0.0",
    "mime-wrapper": "^2.0.0",
    "monaco-editor": "^0.50.0",
    "ngx-markdown": "^21.0.1",
    "ngx-monaco-editor-v2": "^20.3.0",
    "oatear-longtable": "file:libs/oatear-longtable-0.1.5.tgz",
    "opentype.js": "^1.3.4",
    "p-limit": "^4.0.0",
    "pdfmake": "^0.2.20",
    "primeflex": "^2.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^21.0.2",
    "rxjs": "^6.5.3 || ^7.4.0",
    "tslib": "^2.8.1",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zone.js": "^0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.5",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.8",
    "@types/chokidar": "^1.7.5",
    "@types/electron": "^1.6.12",
    "@types/file-saver": "^2.0.7",
    "@types/jasmine": "^4.6.5",
    "@types/node": "^18.19.107",
    "@types/pdfmake": "^0.2.11",
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12",
    "jasmine-core": "^5.7.1",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.3"
  },
  "overrides": {
    "rxjs": "^6.5.3 || ^7.4.0",
    "ngx-monaco-editor-v2": {
      "monaco-editor": "^0.50.0",
      "@angular/core": "$@angular/core",
      "@angular/common": "$@angular/common"
    }
  }
}