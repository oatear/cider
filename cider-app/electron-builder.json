{
    "appId": "com.oatear.cider",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.map",
        "!package.json",
        "!package-lock.json",
        {
            "from": "../dist",
            "filter": ["**/*"]
        }
    ],
	"afterSign": "electron-builder-notarize",
    "mac": {
        "icon": "dist/cider/browser/assets/cider-logo.icns",
        "target": ["dmg"],
		"hardenedRuntime": true,
		"entitlements": "build/entitlements.mac.plist"
    },
    "win": {
        "icon": "dist/cider/browser/favicon.ico",
        "target": ["msi"]
    },
    "linux": {
        "icon": "dist/cider/browser/assets/cider-logo.icns",
        "target": ["deb"]
    }
}